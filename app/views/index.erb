
<h1 class="title">theLine</h1>

<div style="text-align: center; list-style: none;">
<%= erb :'_errors' %>
</div>

<div class="search_box">
<div class="search_box_contents">
<form class="search_form" action="/sports/search" method="post">
	<input class="search_field" type="text" name="player_name" placeholder="Mike Trout">
	<input class="search_button" type="submit" value="search">
</form>
</div>
</div>


<div id="slideshow">
	<img src="https://unsplash.it/1900/1200?image=1058">
	<img src="https://unsplash.it/1900/1200?image=585">
	<img src="https://unsplash.it/1900/1200?image=73">
</div>

<% if @player %>
	<div class="results_box">
		<div style="margin-left: 5px">
		<h2 class="search_player"><b><%= @player["FirstName"] %> <%= @player["LastName"] %></b></h2>
		<p class="jersey_number">Jersey Number: <b><%= @player["JerseyNumber"] %></b></p>
		<p class="position">Position: <b><%= @player["Position"] %></b></p>
		<p class="team_name">Team: <b><%= @results["team"]["City"] %> <%= @results["team"]["Name"] %></b></p>
		</div>
		<h3 class="stats"><b>Statistics</b></h3>
		<div style="width: 40%; margin-left: 3px; float: left;">
		  <p class="games_played">Games Played: <b><%= @stats["GamesPlayed"]["#text"] %></b></p>
    <p class="plate_appearances">Number of Plate Appearances: <b><%= @stats["AtBats"]["#text"] %></b></p>
    <p class="hits">Number of Hits: <b><%= @stats["Hits"]["#text"] %></b></p>
   </div>

    <div style="width: 40%; float: right;" >
    <p class="runs">Number of Runs: <b><%= @stats["Runs"]["#text"] %></b></p>
    <p class="homeruns">Number of Homeruns: <b><%= @stats["Homeruns"]["#text"] %></b></p>
    <p class="batting_avg">Batting Average: <b><%= batting_avg %></b></p>
    </div>
	</div>
<% end %>
